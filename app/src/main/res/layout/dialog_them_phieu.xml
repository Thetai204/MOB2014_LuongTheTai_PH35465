<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="110dp"
        android:background="@drawable/background_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_title_dialog"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thêm phiếu"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/tv_title"
            />

        <EditText
            android:id="@+id/txtMaphieu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/khung_input_login"
            android:hint="Mã phiếu"
            android:paddingHorizontal="15dp" />

       <Spinner
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/sp_tensach"
           android:layout_marginHorizontal="30dp"
           android:layout_marginVertical="5dp"
           />


        <EditText
            android:id="@+id/txtngayThue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/khung_input_login"
            android:clickable="false"
            android:cursorVisible="false"

            android:focusable="false"
            android:hint="Ngày thuê"
            android:inputType="none"
            android:paddingHorizontal="15dp" />
        <EditText
            android:id="@+id/txtgiaThue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:inputType="number"
            android:background="@drawable/khung_input_login"
            android:hint="Giá thuê"
            android:paddingHorizontal="15dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sp_thanhvien"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Trả sách"
    android:id="@+id/cbk_tra"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelx"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_log"
                android:text="Hủy"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSavex"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_login"
                android:text="Lưu"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>